{
  "name": "botbuilder-handoff",
  "version": "0.1.7",
  "license": "MIT",
  "description": "Bot hand off module for the Microsoft Bot Framework. It allows you to transfer a customer from talking to a bot to talking to a human.",
  "main": "dist/index.js",
  "homepage": "https://github.com/palindromed/Bot-HandOff/tree/npm-handoff",
  "scripts": {
    "postinstall": "tsc",
    "clean": "rm -r ./dist",
    "rebuild": "npm run clean && npm run build",
    "build": "tsc",
    "watch": "tsc -w",
    "nodewatch": "nodemon dist/index.js",
    "start": "node dist/index.js",
    "stopTestDb": "mongo --port 26017 --eval \"db.getSiblingDB('admin').shutdownServer()\"",
    "cleanDb": "rm -rf ./testDb && mkdir testDb && mkdir ./testDb/logs",
    "pretest": "npm run cleanDb && npm run stopTestDb &> /dev/null; mongod --fork --logpath ./testDb/logs/mongo.log --dbpath ./testDb --port 26017",
    "test": "npm run rebuild && node_modules/mocha/bin/_mocha --require node_modules/ts-node/register test/handoff.spec.ts",
    "posttest": "npm run stopTestDb &> /dev/null"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/palindromed/Bot-HandOff.git"
  },
  "keywords": [
    "bot",
    "handover",
    "hand off",
    "bot framework"
  ],
  "dependencies": {
    "@types/mongodb": "^2.2.6",
    "applicationinsights": "^0.20.1",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "bot-tester": "0.0.29",
    "botbuilder": "^3.7.0",
    "cors": "2.8.3",
    "express": "^4.14.0",
    "mongodb": "^2.2.29",
    "mongoose": "^4.9.7",
    "typescript": "^2.1.4"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "@types/mongoose": "^4.7.11",
    "@types/node": "^6.0.59",
    "botbuilder-handoff": "^0.1.7",
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "mongo-in-memory": "^0.0.5",
    "nodemon": "^1.11.0",
    "ts-node": "^3.1.0"
  }
}
